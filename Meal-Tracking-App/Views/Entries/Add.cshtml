@model Meal_Tracking_App.ViewModels.AddEntryViewModel; 

<h1>Add Entry</h1>

<form asp-controller="Entries" asp-action="Add" method="post">
    <div class="form-group">
        <label asp-for="Date"></label>
        <input  type="date" value="MM/DD/YYYY" asp-for="Date" />
        <span asp-validation-for="Date"></span>
    </div>
    <div class="form-group">
        <label asp-for="Time"></label>
        <input asp-for="Time" />
        <span asp-validation-for="Time"></span>
    </div>
    <div>
        <label asp-for="Type"></label>
        <select asp-for="Type" asp-items="Model.EntryTypes"></select>
        <span asp-validation-for="Type"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" />
        <span asp-validation-for="Description"></span>
    </div>
    <div class="form-group">
        <label asp-for="Feelings"></label>
        <input asp-for="Feelings" />
        <span asp-validation-for="Feelings"></span>
    </div>
    <input type="submit" value="Add Entry" />
</form>